{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "GCC build active file for debug",
      "dependsOn": [
        "Ensure build folder exists"
      ],
      "command": "gcc",
      "args": [
        "-lm", //link math library
        "-g", //enable debug
        "-O0", //turn off compiler optimizations (do not optimize variables)
        "-o",
        "${workspaceFolder}/build/${relativeFileDirname}/${fileBasenameNoExtension}.o",
        "${file}",
      ],
      // "options": {
      //   "cwd": "/usr/bin"
      // },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Ensure build folder exists",
      "type": "shell",
      "dependsOn": [
        "Remove build folder"
      ],
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/build/${relativeFileDirname}"
      ]
    },
    {
      "label": "Remove build folder",
      "type": "shell",
      "command": "rm",
      "args": [
        "-r",
        "${workspaceFolder}/build"
      ]
    }
  ]
}